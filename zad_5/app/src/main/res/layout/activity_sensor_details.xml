<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/sensor_details_layout_margin"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sensor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sensor_name"
        android:textAlignment="center"
        android:textSize="@dimen/sensor_details_font_title_size" />

    <TextView
        android:id="@+id/sensor_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sensor_details_height"
        android:layout_marginTop="@dimen/sensor_details_layout_margin_top"
        android:text="@string/sensor_label_value_1"
        android:textAlignment="center"
        android:textSize="@dimen/sensor_details_font_values_size" />

</LinearLayout>