<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".LocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_location"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:text="@string/last_localization_subtext"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationY="160dp" />

        <TextView
            android:id="@+id/textview_address"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationY="160dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/localizatino_subtab_margin_top"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/get_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/localization_margins"
                android:text="@string/ask_for_localization"
                android:textAlignment="center"
                android:textSize="@dimen/item_font_size" />

            <Button
                android:id="@+id/get_address_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/localization_margins"
                android:text="@string/ask_for_address"
                android:textAlignment="center"
                android:textSize="@dimen/item_font_size" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>